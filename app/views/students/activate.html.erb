<form action="/students/<%=@student.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" 
       value="<%= form_authenticity_token() %>" 
       name="authenticity_token"/>
    <%if @student.active%>
        <button name="active" type="submit" value="false">UNACTIVATE</button>
    <%else%>
        <button name="active" type="submit" value="true">ACTIVATE</button>
    <%end%>
</form>